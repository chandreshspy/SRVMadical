                    </tr>

                </table>
            </form>
            <table class="table">
                <tr style="margin-top: 20px;" class="col-sm-4 col-xs-12 col-lg-6 col-md-4">
                    <td>  <input id="btnUpload" class="btn btn-success" onclick="AddDetails()" type="submit" value="Add Photo" /></td>
                </tr>
            </table>
        </div>
    </div>

</div>
