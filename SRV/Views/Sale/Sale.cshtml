<style type="text/css">
    body {
        color: #fff;
        background: #63738a;
        font-family: 'Roboto', sans-serif;
    }

    .form-control {
        height: 22px;
        box-shadow: none;
        color: #969fa4;
        border: 2px solid #ccc;
        padding: 0px 0px;
    }

        .form-control:focus {
